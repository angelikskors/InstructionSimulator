<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<VBox fx:controller="sample.controllers.InfoController"
      xmlns:fx="http://javafx.com/fxml" alignment="center" styleClass="background-for-text"
      stylesheets="@../css/style.css">
    <children>
        <HBox spacing="20">
            <children>
                <Label text="What's the idea ?"  styleClass="title" stylesheets="@../css/style.css"/>
            </children>
            <padding>
                <javafx.geometry.Insets top="6" left="6" right="6" bottom="6"/>
            </padding>
        </HBox>
        <HBox spacing="6">
            <children>

                <Label fx:id="text" styleClass="label-text" stylesheets="@../css/style.css" wrapText="true"/>
            </children>
            <padding>
                <javafx.geometry.Insets top="6" left="6" right="6" bottom="6"/>
            </padding>
        </HBox>

    </children>
    <padding>
        <javafx.geometry.Insets top="6" left="6" right="6" bottom="6"/>
    </padding>
</VBox>